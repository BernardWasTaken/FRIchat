@page
@model LoginModel

@{
    ViewData["Title"] = "Prijava";
}

<div class="login">
    <div class="obrazec">
        <section>
            <form id="account" method="post">
                <div class="prijava-sredina">
                    <p>@ViewData["Title"]</p>
                </div>
                
                <br>

                <div class="polje">
                    <label asp-for="Input.Email">Email</label>
                    <input asp-for="Input.Email"  aria-required="true" placeholder="ime@domena.com" />
                </div>
                
                <div class="polje">
                    <label asp-for="Input.Password">Geslo</label>
                    <input asp-for="Input.Password" aria-required="true" placeholder="Geslo" />
                </div>
                <br>
                
                <div class="moznosti">
                    <p><a id="forgot-password" asp-page="./ForgotPassword"> &nbsp;&nbsp;&nbsp; Pozabljeno geslo? </a><a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl"> Registracija?</a></p>
                </div>

                <div class="gumb-sredina" style="padding-bottom: 20px;">
                    <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary">Prijava</button>
                </div>
            </form>
        </section>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}