@page
@model IndexModel
@{
    ViewData["Title"] = "Profile";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<h3 style="color: white;">@ViewData["Title"]</h3>
<partial name="_StatusMessage" for="StatusMessage" />
<div class="row">
    <div class="col-md-6">
        <form id="profile-form" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <div class="form-floating mb-3" style="color: white;">
                <input asp-for="Username" class="form-control" placeholder="Please choose your username." style="border: 1px solid #4289F3;border-radius: 10px;caret-color: white;color: white;padding: 10px;margin-bottom: 5px" disabled />
                <label asp-for="Username" class="form-label"></label>
            </div>
            <div class="form-floating mb-3" style="color: white;">
                <input asp-for="Input.PhoneNumber" class="form-control" placeholder="Please enter your phone number." style="border: 1px solid #4289F3;border-radius: 10px;caret-color: white;color: white;padding: 10px;margin-bottom: 5px" />
                <label asp-for="Input.PhoneNumber" class="form-label"></label>
                <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
            </div>
            <button id="update-profile-button" type="submit" class="w-100 btn btn-lg btn-primary" style="border: 1px solid #4289F9;border-radius: 10px;color: white;background-color: #4289F3;padding: 3px">Save</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
