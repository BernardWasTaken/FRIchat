@using FRIchat.Models

@{
    ViewData["Title"] = "Details";
}

<h1>O predmetu</h1>

<div>
    <hr />
    <dl class="row">

        <br>
        <dd class = "col-sm-10">
            <h3>Naslov predmeta: </h3>
            @Html.DisplayFor(model => model.Ime)
        </dd>
        <br>
        <dd class = "col-sm-10">
            <h3>Predavatelj: </h3>
            @Html.DisplayFor(model => model.Predavatelj)
        </dd>
        <br>
        <dd class = "col-sm-10">
            <h3>Letnik: </h3>
            @Html.DisplayFor(model => model.Letnik)
