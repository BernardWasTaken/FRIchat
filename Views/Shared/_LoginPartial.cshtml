@using Microsoft.AspNetCore.Identity
@using FRIchat.Models

@inject SignInManager<Uporabnik> SignInManager
@inject UserManager<Uporabnik> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <li class="hideOnMobile">
        <a asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage"><b>@UserManager.GetUserName(User)</b></a>
    </li>

    <li class="hideOnMobile">
        <a asp-asp-area="Identity" asp-page="/Account/Logout">Odjava</a>
        <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
            <!-- <button type="submit" class="nav-link btn btn-link text-dark border-0">Logout</button>  -->
        </form>
    </li>
}
else
{
    <li class="hideOnMobile">
        <a id="register" asp-area="Identity" asp-page="/Account/Register">Registracija</a>
    </li>
    <li class="hideOnMobile">
        <a id="login" asp-area="Identity" asp-page="/Account/Login">Prijava</a>
    </li>
}