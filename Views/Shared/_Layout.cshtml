@using FRIchat.Utilities
@{
    if (!ViewData.ContainsKey("IsLoggedIn"))
    {
        ViewData["IsLoggedIn"] = Cookies.CookieExists(new HttpContextAccessor());
    }
}



<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">
        <title>@ViewData["Title"] - FRIchat</title>
        <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600;700&display=swap" rel="stylesheet">
        <link rel="stylesheet" href="~/css/site.css">
    </head>
    
    <body>
    
        <nav>
            <ul>
                <li class="logo"><a asp-controller="Home" asp-action="Index">FRIchat</a></li>
                
                @if ((bool)ViewData["IsLoggedIn"])
                    {
                        <li class="hideOnMobile"><a href="#">Račun</a></li>
                        <li class="hideOnMobile"><a asp-controller="Home" asp-action="About">O aplikaciji</a></li>
                    }
                else
                    {
                        <li class="hideOnMobile"><a asp-action="Login">Prijava</a></li>
                    }
                <li class="menu-button" onclick=showSidebar()><a href="#"><svg xmlns="http://www.w3.org/2000/svg" height="26" viewBox="0 96 960 960" width="26"><path d="M120 816v-60h720v60H120Zm0-210v-60h720v60H120Zm0-210v-60h720v60H120Z"/></svg></a></li>
            </ul>

            <ul class="sidebar">
                <li onclick=hideSidebar()><a href="#"><svg xmlns="http://www.w3.org/2000/svg" height="26" viewBox="0 96 960 960" width="26"><path d="m249 849-42-42 231-231-231-231 42-42 231 231 231-231 42 42-231 231 231 231-42 42-231-231-231 231Z"/></svg></a></li>
                <li class="showOnMobile"><a href="#">Prijava</a></li>
                <li class="showOnMobile"><a href="#">O aplikaciji</a></li>
            </ul>
        </nav>

        <div class="hero">
            @RenderBody()
        </div>

    <script>
        function showSidebar(){
            const sidebar = document.querySelector('.sidebar')
            sidebar.style.display = 'flex'
            }
            function hideSidebar(){
            const sidebar = document.querySelector('.sidebar')
            sidebar.style.display = 'none'
            }
    </script>
    
    @await RenderSectionAsync("Scripts", required: false)
    </body>
</html>