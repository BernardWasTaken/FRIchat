@model FRIchat.Models.Uporabnik

@{
    ViewData["Title"] = "Login";
}

<h1>Login</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CheckCredentials">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Geslo" class="control-label"></label>
                <input asp-for="Geslo" class="form-control" />
                <span asp-validation-for="Geslo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="CheckCredentials" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>