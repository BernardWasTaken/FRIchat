@model FRIchat.Models.Uporabnik

@{
    ViewData["Title"] = "Create";
}

<div class="register">
    <h1>Registracija</h1>
    <br>
    <form asp-action="Register">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Ime" class="control-label"></label>
            <input asp-for="Ime" class="form-control" />
            <span asp-validation-for="Ime" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Email" class="control-label"></label>
            <input asp-for="Email" class="form-control" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Geslo" class="control-label"></label>
            <input asp-for="Geslo" class="form-control" />
            <span asp-validation-for="Geslo" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Telefon" class="control-label"></label>
            <input asp-for="Telefon" class="form-control" />
            <span asp-validation-for="Telefon" class="text-danger"></span>
        </div>
        <h6>Ste Å¾e registrirani? <a asp-action="Login">Prijava</a></h6>
        <br>
        <div class="form-group">
            <input class="button" type="submit" value="Registriraj se" class="btn btn-primary" />
        </div>
    </form>
</div>
